<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	version="6.0">

	<context-param>
		<param-name>DATABASE_URL</param-name>
		<param-value>jdbc:mysql://localhost:3306/cms</param-value>
	</context-param>
	<context-param>
		<param-name>DATABASE_ADMIN_ID</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>DATABASE_ADMIN_PASSWORD</param-name>
		<param-value>rootroot</param-value>
	</context-param>


	<servlet>
		<description></description>
		<display-name>JDBCServletQueryDemo</display-name>
		<servlet-name>JDBCServletQueryDemo</servlet-name>
		<servlet-class>com.ecommerce.JDBCServletQueryDemo</servlet-class>
		<init-param>
			<param-name>DATABASE_URL</param-name>
			<param-value>jdbc:mysql://localhost:3306/cms</param-value>
		</init-param>
		<init-param>
			<param-name>DATABASE_ADMIN_ID</param-name>
			<param-value>root</param-value>
		</init-param>
		<init-param>
			<param-name>DATABASE_ADMIN_PASSWORD</param-name>
			<param-value>rootroot</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>JDBCServletQueryDemo</servlet-name>
		<url-pattern>/students-query</url-pattern>
	</servlet-mapping>
	<display-name>ServletJDBCDemo</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>AddNewStudentServlet</display-name>
		<servlet-name>AddNewStudentServlet</servlet-name>
		<servlet-class>com.ecommerce.AddNewStudentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddNewStudentServlet</servlet-name>
		<url-pattern>/insert-student</url-pattern>
	</servlet-mapping>
</web-app>